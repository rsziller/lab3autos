@model lab2.Models.Jugador

@{
    ViewData["Title"] = "FormPlayer";
}

<h1>FormPlayer</h1>

<h4>Jugador</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Home" asp-action="SavePlayer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apellido" class="control-label"></label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rol" class="control-label"></label>
                <input asp-for="Rol" class="form-control" />
                <span asp-validation-for="Rol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KDA" class="control-label"></label>
                <input asp-for="KDA" class="form-control" />
                <span asp-validation-for="KDA" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreepScore" class="control-label"></label>
                <input asp-for="CreepScore" class="form-control" />
                <span asp-validation-for="CreepScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Equipo" class="control-label"></label>
                <input asp-for="Equipo" class="form-control" />
                <span asp-validation-for="Equipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="ImportarCSVP">

    <input type="file" name="ArchivoCargado" />
    <br />
    <input type="submit" value="Agregar" />

</form>

<div>
    <a asp-action="Index">Back to Home</a>
</div>

